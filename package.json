{
  "name": "map-controls",
  "version": "0.1.0",
  "description": "A framework-agnostic TypeScript module for map panning and zooming",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "test:coverage": "node scripts/test-with-coverage.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "example": "node example/run-example.js",
    "build-docs": "node documentation/scripts/md-to-html.js",
    "serve-docs": "npx http-server -o /documentation",
    "generate-sitemap": "node documentation/scripts/generate-sitemap.js",
    "check-links": "node documentation/scripts/check-links.js",
    "docs": "node documentation/scripts/build-and-serve.js",
    "start-all": "node scripts/start-all.js",
    "check-deps": "node scripts/check-deps.js",
    "release": "node scripts/create-release.js",
    "workflow": "node scripts/dev-workflow.js",
    "changelog": "node scripts/generate-changelog.js",
    "init-changelog": "node scripts/init-changelog.js",
    "prepare-release": "node scripts/prepare-release.js"
  },
  "keywords": [
    "map",
    "controls",
    "pan",
    "zoom",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.38.0",
    "highlight.js": "^11.7.0",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "jsdom": "^22.1.0",
    "marked": "^4.3.0",
    "open": "^10.1.2",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.2"
  }
}
